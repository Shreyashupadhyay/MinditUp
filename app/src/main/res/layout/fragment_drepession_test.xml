<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DrepessionTest"
    android:background="#c9e3ed">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/questionNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/ques_ans"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/lato"
                android:padding="10dp"
                android:text="@string/ques"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/idBtnOption1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:text="Option 1"
                android:textColor="#2d2f30"
                android:fontFamily="sans-serif-light"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:background="@drawable/testbtn"
                app:backgroundTint="@null" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:text="Option 2"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:textColor="#2d2f30"
                android:fontFamily="sans-serif-light"
                android:id="@+id/idBtnOption2"
                android:background="@drawable/testbtn"
                app:backgroundTint="@null"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:text="Option 3"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:id="@+id/idBtnOption3"
                android:textColor="#2d2f30"
                android:fontFamily="sans-serif-light"
                android:background="@drawable/testbtn"
                app:backgroundTint="@null"
                />

            <Button
                android:id="@+id/idBtnOption4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:text="Option 4"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textColor="#2d2f30"
                android:fontFamily="sans-serif-light"
                android:background="@drawable/testbtn"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/idBtnOption5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:text="Option 5"
                android:textColor="#2d2f30"
                android:fontFamily="sans-serif-light"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:background="@drawable/testbtn"
                app:backgroundTint="@null" />

        </LinearLayout>

<!--        <ImageView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="150dp"-->
<!--            android:layout_alignParentBottom="true"-->
<!--            android:scaleType="centerCrop"-->
<!--            android:src="@drawable/depressiongs" />-->
    </RelativeLayout>

</FrameLayout>